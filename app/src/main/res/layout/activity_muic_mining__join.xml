<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_muic_mining__join"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_nocircle"
    tools:context="music_m.music_mining.make_id.MuicMining_Join">

    <!---
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp">
-->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp">

        <!---
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:src="@drawable/music_mining_logo_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:textSize="100px"
            android:layout_marginTop="@dimen/activity_horizontal_margin"/>

-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp">
            <!---margineTop=8dp -->

            <ImageView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_mail" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textEmailAddress"
                    android:id="@+id/emailInput"
                    android:hint="Email"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_password" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:id="@+id/passwordInput"
                    android:hint="Password"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="(글자수:6~16, 숫자, 문자, 특수문자조합)"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_password" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:id="@+id/passwordCheck"
                    android:hint="Password Check"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_name" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/nameInput"
                    android:hint="Name"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/write_birthday" />

            <DatePicker
                android:id="@+id/birthInput"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:calendarTextColor="#ffffff"
                android:yearListSelectorColor="#ffffff">
            </DatePicker>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/write_gender" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sexInput"
                android:orientation="horizontal">

                <RadioButton
                    android:text="남"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/sex1" />

                <RadioButton
                    android:text="여"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:id="@+id/sex2" />
            </RadioGroup>
        </LinearLayout>

        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/btnJoin"
            android:layout_marginTop="56dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_membership"/>

    </LinearLayout>
    <!---
        </ScrollView>
    -->

</RelativeLayout>
