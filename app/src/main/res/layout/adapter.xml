<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">



    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/thumnail"
            android:background="#262626"
            android:layout_width="match_parent"
            android:layout_height="169dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/biz_video_list_play_icon_big"
                android:id="@+id/play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.android.tedcoder.wkvideoplayer.view.SuperVideoPlayer
                android:visibility="gone"
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="169dp">
            </com.android.tedcoder.wkvideoplayer.view.SuperVideoPlayer>
        </FrameLayout>




        <RelativeLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="17dp"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:id="@+id/album_image"
                        android:src="@drawable/image_independent_project"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#ffffff"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/title"
                        android:text="Sweet love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  />
                    <TextView
                        android:textColor="#ffffff"
                        android:layout_marginLeft="8dp"
                        android:layout_below="@+id/title"
                        android:id="@+id/musician_name"
                        android:textSize="10sp"
                        android:text="백승환"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#ffffff"
                        android:layout_below="@+id/title"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/musician_name"
                        android:id="@+id/album_name"
                        android:textSize="10sp"
                        android:text=" ('무소속프로젝트 컴필레이션 2015 '수록곡)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        />
                </RelativeLayout>
            </LinearLayout>



            <ImageButton
                android:background="@android:color/transparent"
                android:src="@drawable/button_plus"
                android:layout_alignParentRight="true"
                android:padding="4dp"
                android:id="@+id/addMusicToPlayList"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </LinearLayout>





</android.support.v7.widget.CardView>
